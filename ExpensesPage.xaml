<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dollar_Wise.ExpensesPage"
             Title="ExpensesPage">
    <StackLayout Padding="20">
        <!-- Add Expense Button -->
        <Button Text="Add Expense" Clicked="AddExpense_Clicked" Margin="0,0,0,10"/>

        <!-- List of Expenses -->
        <ListView x:Name="ExpensesListView" ItemsSource="{Binding Expenses}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Spacing="0">
                            <Label Text="{Binding Name}" HorizontalOptions="StartAndExpand"/>
                            <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}" />
                            <Label Text="{Binding Date, StringFormat='Date: {0:MM/dd/yyyy}'}" />
                            <Label Text="{Binding Category}" />
                            <!-- Add more labels for additional properties as needed -->
                            <StackLayout Orientation="Vertical" Spacing="20">
                                <Button Text="Edit" Clicked="EditExpense_Clicked"/>
                                <Button Text="Delete" Clicked="DeleteExpense_Clicked"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
