<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dollar_Wise.ExpensesPage"
             Title="Expenses">
    <StackLayout Padding="20">
        <!-- Text for Recent Expenses -->
        <StackLayout Orientation="Horizontal">
            <Label Text="Recent Expenses" FontSize="Title" HorizontalOptions="Start" Margin="0,0,10,0"/>
            <Image Source="add_icon.png" HeightRequest="30" WidthRequest="30" HorizontalOptions="End" VerticalOptions="Center" TapGestureRecognizer_Tapped="AddExpense_Tapped"/>
        </StackLayout>

        <!-- List of Expenses -->
        <ListView x:Name="ExpensesListView" ItemsSource="{Binding Expenses}"
                  SeparatorVisibility="None" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10" Spacing="10">
                            <!-- Expense Name -->
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Name}" FontSize="Title" HorizontalOptions="Start"/>
                                <Label Text="{Binding Date, StringFormat='Date: {0:MM/dd/yyyy}'}" FontSize="Subtitle" HorizontalOptions="EndAndExpand"/>
                            </StackLayout>
                            <!-- Expense Details -->
                            <StackLayout Orientation="Horizontal">
                                <Label Text="{Binding Amount, StringFormat='Amount: {0:C}'}" FontSize="Subtitle" HorizontalOptions="StartAndExpand"/>
                                <Label Text="{Binding Category, StringFormat='Category: {0:C}'}" FontSize="Subtitle" HorizontalOptions="End"/>
                            </StackLayout>


                            <!-- Edit and Delete Buttons -->
                            <StackLayout Orientation="Horizontal" HorizontalOptions="End" Spacing="10">
                                <Button Text="Edit" Clicked="EditExpense_Clicked"/>
                                <Button Text="Delete" Clicked="DeleteExpense_Clicked"/>
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
